<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/gamescreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/info_button_description"
            android:src="@drawable/info_button"
            android:background="@null"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="50dp"
            android:onClick="showInfo"/>

    <ImageView
            android:id="@+id/go_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/go_for_description"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/go_for_y"/>

    <ImageView
            android:id="@+id/triangle"
            android:src="@drawable/triangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/triangle_y"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/triangle_description"/>

    <ImageView
            android:id="@+id/glow"
            android:src="@drawable/glow_big"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:contentDescription="@string/glow_description"
            android:visibility="invisible"/>

    <ImageView
            android:id="@+id/walk"
            android:src="@drawable/icon_walk_normal"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:contentDescription="@string/walk_description"/>

    <ImageView
            android:id="@+id/drink"
            android:src="@drawable/icon_drink_normal"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:contentDescription="@string/drink_description"/>

    <ImageView
            android:id="@+id/party"
            android:src="@drawable/icon_party_normal"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:contentDescription="@string/party_description"/>

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true">

        <ImageButton
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:contentDescription="@string/vkontakte_button_description"
                android:src="@drawable/vk_button"
                android:layout_weight="0.25"
                android:background="@null"/>

        <ImageButton
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:contentDescription="@string/odnoklassniki_button_description"
                android:src="@drawable/ok_button"
                android:layout_weight="0.25"
                android:background="@null"/>

        <ImageButton
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:contentDescription="@string/facebook_button_description"
                android:src="@drawable/fb_button"
                android:layout_weight="0.25"
                android:background="@null"/>

        <ImageButton
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:contentDescription="@string/twitter_button_description"
                android:src="@drawable/tw_button"
                android:layout_weight="0.25"
                android:background="@null"/>

    </LinearLayout>
</RelativeLayout>